<h1>Listing cart_items</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Cart</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= @book_id = cart_item.book_id %></td>
        <td><%=  book = Book.find (params[:book_id]) %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
       
        <td><%= cart_item.cart_id %></td>
        <td><%= link_to 'Show', cart_item %></td>
        <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart item', new_cart_item_path %>
