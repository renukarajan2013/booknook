<%- model_class = Book -%>
<div class="page-header">
  <h1>My Cart</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
 	<% @cart = Cart.find(session[:id]) %>
    	<% @cart_items = CartItem.where(cart_id: @cart.id) %>
    	<% @cart_items.each do |cart_item|%>
        <% @book = Book.where(id: cart_item.book_id).first%>
         <tr>
<td><%= @book.name %></td>
        <td><%= @book.author%></td>
        <td><%= number_to_currency(@book.price)%></td>

	<td>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_path(@book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>

        <%end%>	
	</tr>
	<tr>
      		<td></td>
      		<td></td>
      		<td>Total Price</td>
      		<td><%= number_to_currency(@cart.total_price) %></td>
    	</tr>
  </tbody>
</table>





  <%= link_to t('.Continue Shopping', :default => t("helpers.links.Continue Shopping")),
                      '/Browse', :method => :get, :class => 'btn btn-small' %>
<%= link_to t('.Empty Cart', :default => t("helpers.links.Empty Cart")),
                      cart_path(@cart),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-small btn-danger' %>
